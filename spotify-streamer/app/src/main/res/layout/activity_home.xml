<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8C434"
    android:gravity="center">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:scaleType="centerInside"
        android:src="@drawable/kate_perry" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:paddingTop="64dp">

        <TextView
            android:id="@+id/home_app_name_above"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="@string/home_app_name_1"
            android:textColor="@color/accent"
            android:textSize="72sp" />

        <TextView
            android:id="@+id/home_app_name_below"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="@string/home_app_name_2"
            android:textColor="@color/accent"
            android:textSize="32sp" />

    </LinearLayout>

    <include
        android:id="@+id/searcBox"
        layout="@layout/element_home_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_centerInParent="true"/>


</RelativeLayout>
