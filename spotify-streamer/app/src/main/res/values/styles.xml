<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Base theme colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Base control colors -->
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/accent_dark</item>
        <item name="colorControlHighlight">@color/accent</item>

        <!-- Disable actionbar for using the new Toolbar -->
        <item name="windowActionBar">false</item>

        <!-- Base text colors -->
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/white</item>

    </style>

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.Dark">

        <!-- Default toolbar title -->
        <item name="android:title">@string/app_name</item>

        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="android:background">@color/primary</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="colorControlNormal">@color/white</item>

        <!-- Toolbar min height -->
        <item name="android:minHeight">@dimen/toolbar_height</item>

        <!-- Toolbar text colors -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white_transparent</item>

        <!-- Toolbar popup style -->
        <item name="popupTheme">@style/AppTheme.Toolbar.Popup</item>
        <item name="actionBarPopupTheme">@style/AppTheme.Toolbar.Popup</item>
        <item name="actionBarWidgetTheme">@style/ThemeOverlay.AppCompat.Dark</item>

        <!-- Toolbar contents gravity -->
        <item name="android:gravity">center_vertical</item>

    </style>

    <style name="AppTheme.Home.Search" parent="ThemeOverlay.AppCompat.Dark">

        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="android:background">@color/primary</item>
        <!-- <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>-->
        <item name="colorControlNormal">@color/white</item>

        <!-- Toolbar text colors -->
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textColorSecondary">#212121</item>

    </style>

    <!-- Base toolbar popup theme -->
    <style name="AppTheme.Toolbar.Popup" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:background">@color/white</item>
    </style>


    <!-- Base toolbar text appearance -->
    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">

        <!-- Set proper title size -->
        <item name="android:textSize">@dimen/abc_text_size_subtitle_material_toolbar</item>

        <!-- Set title color -->
        <item name="android:textColor">@color/white</item>

        <!-- Toolbar title gravity and padding for correct position-->
        <item name="android:gravity">center_vertical</item>

    </style>


</resources>
